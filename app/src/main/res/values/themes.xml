<resources>
    <!-- 기본 테마 -->
    <style name="Base.Theme.SecondHandTrade" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:fontFamily">@font/nanum_square_round_bold</item>
    </style>

    <style name="Theme.SecondHandTrade" parent="Base.Theme.SecondHandTrade">
        <item name="buttonStyle">@style/StyleButton</item>
        <item name="bottomSheetDialogTheme">@style/StyleBottomSheetDialog</item>
        <item name="android:datePickerDialogTheme">@style/StyleDatePickerDialog</item>
    </style>

    <!-- 커스텀 스타일 -->
    <style name="StyleToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/nanum_square_round_extra_bold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextColor">@color/dark_gray</item>
    </style>

    <style name="StyleExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="shapeAppearance">
            @style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary
        </item>
    </style>

    <style name="StyleSmoothBottomBar">
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="iconSize">26dp</item>
        <item name="iconTint">@color/dark_gray</item>
        <item name="iconTintActive">@color/colorPrimary</item>
        <item name="itemFontFamily">@font/nanum_square_round_bold</item>
        <item name="textColor">@color/colorPrimary</item>
        <item name="textSize">18dp</item>
    </style>

    <style name="StyleBottomSheetDialog.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/drawable_register_bsdialog</item>
    </style>

    <style name="StyleBottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/StyleBottomSheetDialog.Modal</item>
    </style>

    <style name="StyleDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/darker_gray</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/StyleDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/StyleDialogButton</item>
    </style>

    <style name="StyleDialogButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item> <!-- button text color -->
    </style>

    <style name="StyleButton" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="StyleButton.Rounded">
        <item name="android:background">@drawable/drawable_login_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="StyleToggleButton">
        <item name="android:background">@drawable/drawable_home_tgbtn_forsale</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@drawable/drawable_home_tgbtn_forsale_text</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="StyleTextInputEditText">
        <item name="android:background">@drawable/drawable_login_edit</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="StyleEditTextNumber">
        <item name="android:background">@drawable/drawable_home_edit</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16dp</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="StyleSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:background">@null</item>
        <item name="android:thumb">@drawable/drawable_login_switch_thumb</item>
        <item name="switchMinWidth">0dp</item>
        <item name="switchPadding">8dp</item>
        <item name="thumbTint">@null</item>
        <item name="track">@drawable/drawable_login_switch_track</item>
        <item name="trackTint">@null</item>
    </style>

    <style name="StyleRangeSlider" parent="Widget.MaterialComponents.Slider">
        <item name="android:stepSize">1000.0</item>
        <item name="android:valueFrom">0.0</item>
        <item name="android:valueTo">1000000.0</item>
        <item name="haloColor">@android:color/transparent</item>
        <item name="labelBehavior">gone</item>
        <item name="thumbColor">@color/colorPrimary</item>
        <item name="thumbRadius">16dp</item>
        <item name="tickVisible">false</item>
        <item name="trackColorActive">@color/colorSecondary</item>
        <item name="trackColorInactive">@color/light_gray</item>
        <item name="trackHeight">32dp</item>
    </style>

    <style name="StyleCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>